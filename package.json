    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.2.0",
    "code": "5.x.x",
    "lab": "15.x.x"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "scripts": {
